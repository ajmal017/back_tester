<%= form_for @bar, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :security_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :security_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :period, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :period, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :open, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :open, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :high, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :high, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :low, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :low, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :close, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :close, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :wap, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :wap, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :volume, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :volume, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :date, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :date, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :started_at, :class => 'control-label' %>
    <div class="controls">
      <%= f.time_select :started_at, :class => 'time_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :ended_at, :class => 'control-label' %>
    <div class="controls">
      <%= f.time_select :ended_at, :class => 'time_select' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                bars_path, :class => 'btn' %>
  </div>
<% end %>
