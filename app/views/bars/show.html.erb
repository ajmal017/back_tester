<%- model_class = Bar -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:security_id) %>:</strong></dt>
  <dd><%= @bar.security_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:period) %>:</strong></dt>
  <dd><%= @bar.period %></dd>
  <dt><strong><%= model_class.human_attribute_name(:open) %>:</strong></dt>
  <dd><%= @bar.open %></dd>
  <dt><strong><%= model_class.human_attribute_name(:high) %>:</strong></dt>
  <dd><%= @bar.high %></dd>
  <dt><strong><%= model_class.human_attribute_name(:low) %>:</strong></dt>
  <dd><%= @bar.low %></dd>
  <dt><strong><%= model_class.human_attribute_name(:close) %>:</strong></dt>
  <dd><%= @bar.close %></dd>
  <dt><strong><%= model_class.human_attribute_name(:wap) %>:</strong></dt>
  <dd><%= @bar.wap %></dd>
  <dt><strong><%= model_class.human_attribute_name(:volume) %>:</strong></dt>
  <dd><%= @bar.volume %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date) %>:</strong></dt>
  <dd><%= @bar.date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:started_at) %>:</strong></dt>
  <dd><%= @bar.started_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ended_at) %>:</strong></dt>
  <dd><%= @bar.ended_at %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              bars_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_bar_path(@bar), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              bar_path(@bar),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
