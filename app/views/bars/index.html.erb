<%- model_class = Bar -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:security_id) %></th>
      <th><%= model_class.human_attribute_name(:period) %></th>
      <th><%= model_class.human_attribute_name(:open) %></th>
      <th><%= model_class.human_attribute_name(:high) %></th>
      <th><%= model_class.human_attribute_name(:low) %></th>
      <th><%= model_class.human_attribute_name(:close) %></th>
      <th><%= model_class.human_attribute_name(:wap) %></th>
      <th><%= model_class.human_attribute_name(:volume) %></th>
      <th><%= model_class.human_attribute_name(:date) %></th>
      <th><%= model_class.human_attribute_name(:started_at) %></th>
      <th><%= model_class.human_attribute_name(:ended_at) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @bars.each do |bar| %>
      <tr>
        <td><%= link_to bar.id, bar_path(bar) %></td>
        <td><%= bar.security_id %></td>
        <td><%= bar.period %></td>
        <td><%= bar.open %></td>
        <td><%= bar.high %></td>
        <td><%= bar.low %></td>
        <td><%= bar.close %></td>
        <td><%= bar.wap %></td>
        <td><%= bar.volume %></td>
        <td><%= bar.date %></td>
        <td><%= bar.started_at %></td>
        <td><%= bar.ended_at %></td>
        <td><%=l bar.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_bar_path(bar), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      bar_path(bar),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_bar_path,
            :class => 'btn btn-primary' %>
